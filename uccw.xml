<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e5e7e9" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        android:overScrollMode="never" >
        
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:src="@drawable/uccw_3" />
    
    <Button
        android:id="@+id/buttonRepairSkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dluccw"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        android:background="@drawable/btn_default_holo_dark2"
        android:fontFamily="sans-serif-light"
        android:gravity="center|center_horizontal"
        android:text="@string/uccw2"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:alpha=".7"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="5dp"
        android:text="@string/uccw3"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/dluccw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_default_holo_dark"
        android:fontFamily="sans-serif-light"
        android:minHeight="48dp"
        android:text="@string/uccw4"
        android:textColor="@color/blue"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="@string/uccw"
        android:textColor="@color/grey"
        android:textSize="24dp" />

      </RelativeLayout>
	</ScrollView>
</RelativeLayout>
